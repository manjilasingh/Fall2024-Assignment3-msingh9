@model Fall2024_Assignment3_msingh9.Models.ActorDetailsViewModel
@using Fall2024_Assignment3_msingh9.Controllers
@{
    ViewData["Title"] = "Details";
}
<div class="pd">
<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDB)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.Actor.IMDB" target="_blank">@Html.DisplayFor(model => model.Actor.IMDB)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Photo)
        </dt>
            <dd class="col-sm-10">
                <img width="100" height="100" src="@Url.Action("GetActorPhoto", "Actors", new { id = @Model?.Actor.ActorID })"  />
            </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor.ActorID">Edit</a> |2
    <a asp-action="Index">Back to List</a>
</div>
    <h5>Movies</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movies)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Movies" asp-route-id="@item.MovieID">Edit</a> |
                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.MovieID">Details</a> |
                        <a asp-action="Delete" asp-controller="Movies" asp-route-id="@item.MovieID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (ViewData["Reviews"] != null)
    {
        var reviews = (List<ActorsController.TweetWithSentiment>)ViewData["Reviews"];

        <div class="mt-4">
            <h2>AI Generated Actor Tweets</h2>
            <h3>Overall Sentiment: @Model.Actor.AverageSentiment.ToString("F2")</h3>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tweet</th>
                        <th>Sentiment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in reviews)
                    {
                        <tr>
                            <td>@review.Tweet</td>
                            <td>@review.Sentiment.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>